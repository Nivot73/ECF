{% extends 'base.html.twig' %}

{% block title %}Film{% endblock %}

{% block body %}
    <h1>Film</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ film.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ film.Nom }}</td>
            </tr>
            <tr>
                <th>Genre</th>
                <td>{{ film.Genre }}</td>
            </tr>
            <tr>
                <th>Affiche</th>
                <td>{{ film.Affiche }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ film.Description }}</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>{{ film.Age }}</td>
            </tr>
            <tr>
                <th>Label</th>
                <td>{{ film.label ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ film.Note }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_film_index') }}">back to list</a>

    <a href="{{ path('app_film_edit', {'id': film.id}) }}">edit</a>

    {{ include('film/_delete_form.html.twig') }}
{% endblock %}
